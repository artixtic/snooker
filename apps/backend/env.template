# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/snooker_pos?schema=public"

# Backup Database Configuration (Optional)
# If not provided, backup service will be disabled
# This should be a separate PostgreSQL database for backup purposes
BACKUP_DATABASE_URL="postgresql://user:password@localhost:5432/snooker_pos_backup?schema=public"

# Enable Backup Service (Optional)
# Set to "true" to enable the backup service, "false" to disable
# Note: This is automatically set by npm scripts (dev=true)
# ENABLE_BACKUP_SERVICE="true"

# Enable Two-Way Sync (Optional)
# Set to "true" to enable two-way sync between main and backup databases
# Default: true
# ENABLE_TWO_WAY_SYNC="true"

# Backup Configuration
# Backup retention days (default: 30)
# BACKUP_RETENTION_DAYS=30

# Two-way sync interval in milliseconds (default: 30000 = 30 seconds)
# SYNC_INTERVAL_MS=30000

# Server Configuration
# Port for backend server (default: 3001 for dev)
PORT=3001
# CORS origin - frontend URL (default: http://localhost:3000 for dev)
CORS_ORIGIN="http://localhost:3000"

# JWT Configuration
JWT_SECRET="your-secret-key-here-change-in-production"

