# Production Environment Configuration
# Copy this file to .env.production and update with your production values
# NEVER commit .env.production to version control

# Database Configuration
# Use a production PostgreSQL database
DATABASE_URL="postgresql://user:password@your-production-db-host:5432/snooker_pos?schema=public"

# Backup Database Configuration (Optional but Recommended)
# Set up a separate database for automated backups
BACKUP_DATABASE_URL="postgresql://user:password@your-production-db-host:5432/snooker_pos_backup?schema=public"

# Enable Backup Service
# Set to "true" to enable automated backups every minute
ENABLE_BACKUP_SERVICE="true"

# Server Configuration
# Port for backend server (4001 for production)
PORT=4001
NODE_ENV=production
# CORS origin - frontend URL (use your production domain)
CORS_ORIGIN="https://your-production-domain.com"

# JWT Configuration
# IMPORTANT: Generate strong, unique secrets for production
# Use a secure random string generator (at least 32 characters)
JWT_SECRET="your-production-jwt-secret-key-minimum-32-characters-long"
JWT_REFRESH_SECRET="your-production-jwt-refresh-secret-key-minimum-32-characters-long"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
